<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Tervisipaevik_Daria_Valeria.View"
            xmlns:pages="clr-namespace:Tervisipaevik_Daria_Valeria"
            x:Class="Tervisipaevik_Daria_Valeria.Flyout_Page"
            xmlns:flyoutpage="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
            FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="Menüü">
            <StackLayout>
                <Button x:Name="btnStartPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Avaleht"
                        CornerRadius="0"
                        Clicked="btnStartPage_Clicked"/>
                <Button x:Name="btnHommikusookFotoPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Hommikusöök"
                        CornerRadius="0"
                        Clicked="btnHommikusookFotoPage_Clicked"/>
                <Button x:Name="btnLounasookFotoPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Lõunasöök"
                        CornerRadius="0"
                        Clicked="btnLounasookFotoPage_Clicked"/>
                <Button x:Name="btnOhtusookFotoPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Õhtusöök"
                        CornerRadius="0"
                        Clicked="btnOhtusookFotoPage_Clicked"/>
                <Button x:Name="btnVahepalaFotoPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Vahepala"
                        CornerRadius="0"
                        Clicked="btnVahepalaFotoPage_Clicked"/>
                <Button x:Name="btnVeejalgiminePage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Veejälgimine"
                        CornerRadius="0"
                        Clicked="btnVeejalgiminePage_Clicked"/>
                <Button x:Name="btnTreeningudFotoPage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Treeningud"
                        CornerRadius="0"
                        Clicked="btnTreeningudFotoPage_Clicked"/>
                <Button x:Name="btnEnesetunnePage"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Enesetunne"
                        CornerRadius="0"
                        Clicked="btnEnesetunnePage_Clicked"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:StartPage1 Title="Avaleht"/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>